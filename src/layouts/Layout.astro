---
import '../styles/global.css';
import 'aos/dist/aos.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Muhammad Fatih Al Fawwaz | AI Engineering Student & Web Developer",
  description = "Personal CV of Muhammad Fatih Al Fawwaz – AI Engineering Student & Web Developer based in Surabaya, Indonesia.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/Logo.svg" />
    <link rel="icon" href="/Logo.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Devicon – icon font used in Skills section -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
